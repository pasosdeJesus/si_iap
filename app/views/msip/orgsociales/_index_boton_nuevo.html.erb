<% e = new_modelo_path(@registros) %>
<% if params && params[:filtro] && params[:filtro][:bustipoorg_id] %>
  <% e += "?filtro[bustipoorg_id]=#{params[:filtro][:bustipoorg_id].to_i}" %>
